<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vindicators.voters">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".FinalResults"></activity>
        <activity android:name=".RestaurantAdapter" />
        <activity android:name=".VotingPageAdapter"></activity>
        <activity android:name=".VotingPage"
            android:parentActivityName=".SelectRestaurant"/>

        <activity android:name=".FriendsListAdapter" />
        <activity android:name=".RestaurantAdapter" />
        <activity android:name=".SelectRestaurant"
            android:parentActivityName=".CreateGroup"/>
        <activity android:name=".FriendsList"
            android:parentActivityName=".HomeActivity"/>
        <activity
            android:name=".HomeActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CreateGroup"
            android:parentActivityName=".HomeActivity"/>

        <activity android:name=".CreateGroupAdapter" />
    </application>

</manifest>